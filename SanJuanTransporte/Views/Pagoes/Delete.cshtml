@model SanJuanTransporte.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h1>Eliminar Pago</h1>

<h3>¿Estás seguro de que deseas eliminar esto?</h3>
<div>
    <h4>Detalles del Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Monto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>

        <dt class="col-sm-2">
            Detalle
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Detalle)
        </dd>

        <dt class="col-sm-2">
            Fecha de Pago
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaPago)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Anio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Anio)
        </dd>
        <dt class="col-sm-2">
            Conductor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conductor.Direccion)
        </dd>

        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Email)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PagoId" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </form>
</div>
