@{
    Layout = null;
}

<!DOCTYPE html>
    <div class="header-container">
        <img src="/images/ENCABEZADO.png" alt="Encabezado" class="header-image" width="1200" height="150" style="display: block; margin: 0 auto;">

    </div>


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <style>

        body {
            background-image: url('/images/IMAGEN7.jpg'); /* Reemplaza 'fondo.jpg' con la ruta real de tu imagen de fondo */
            background-size: cover; /* Asegura que la imagen de fondo cubra todo el cuerpo */
            background-position: center; /* Centra la imagen de fondo */
            background-repeat: no-repeat; /* No se repite la imagen de fondo */
            background-attachment: fixed; /* Fija la posición de la imagen de fondo al desplazarse */
            background-color: #f8f9fa; /* Color de fondo de respaldo para navegadores que no admiten imágenes de fondo */
        }

        /* Tus estilos existentes permanecen sin cambios */
        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            padding: 20px;
        }

       

        .logo-container {
            text-align: center;
            margin-bottom: 20px;
        }

            .logo-container img {
                max-width: 100%;
                height: auto;
            }

        .login-form {
            text-align: center;
        }

            .login-form label {
                text-align: left;
            }

        .login-btn {
            background-color: #ff8c00; /* Naranja */
            border: 1px solid #ff8c00; /* Borde naranja */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 logo-container">
                <img src="/images/LOGO3.png" alt="Logo" />
            </div>
            <div class="col-sm-6">
                <h1 class="h3 mb-3 fw-normal text-center"> INICIO DE SESION</h1>
                <h5 class="text-center">SAN JUAN TRANSPORTE</h5>
                <form asp-controller="Login" asp-action="Login" method="post" class="login-form">
                    <div class="mb-3">
                        <label for="correo">Correo Electrónico</label>
                        <input type="email" id="correo" name="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="contrasena">Contraseña</label>
                        <input type="password" id="contrasena" name="password" class="form-control" required>
                    </div>

                    <button class="w-100 btn btn-lg btn-primary login-btn" type="submit">Ingresar al Sistema</button>
                </form>
                @if (TempData["LoginError"] != null)
                {
                    <div class="alert alert-danger mt-3">@TempData["LoginError"]</div>
                }

                <p class="mt-5 mb-3 text-muted">&copy; 2023-SAN JUAN TRANSPORTE </p>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
