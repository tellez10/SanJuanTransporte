
@model SanJuanTransporte.Models.Conductor

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Conductor</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CI" class="control-label">Cédula de Identidad</label>
                <input asp-for="CI" class="form-control" required />
                <span asp-validation-for="CI" class="text-danger"></span>
                <div class="invalid-feedback">Campo requerido.</div>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label">Dirección</label>
                <input asp-for="Direccion" class="form-control" required />
                <span asp-validation-for="Direccion" class="text-danger"></span>
                <div class="invalid-feedback">Campo requerido.</div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Correo Electrónico</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="invalid-feedback">Campo requerido.</div>
            </div>
            <div class="form-group">
                <label asp-for="NombreCompleto" class="control-label">Nombre Completo</label>
                <input asp-for="NombreCompleto" class="form-control" required />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                <div class="invalid-feedback">Campo requerido.</div>
            </div>
            <div class="form-group">
                <label asp-for="NumeroLicencia" class="control-label">Número de Licencia</label>
                <input asp-for="NumeroLicencia" class="form-control" required />
                <span asp-validation-for="NumeroLicencia" class="text-danger"></span>
                <div class="invalid-feedback">Campo requerido.</div>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPlaca" class="control-label">Número de Placa</label>
                <input asp-for="NumeroPlaca" class="form-control" required />
                <span asp-validation-for="NumeroPlaca" class="text-danger"></span>
                <div class="invalid-feedback">Campo requerido.</div>
            </div>
            <div class="form-group">
                <label asp-for="FotoFile" class="control-label"></label>
                <input asp-for="FotoFile" type="file" class="form-control" />

                <div class="form-group">
                    <img src="" id="previewImage" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var fotoFileInput = document.getElementById('FotoFile');
            if (fotoFileInput) {
                fotoFileInput.addEventListener('change', function (event) {
                    var input = event.target;
                    var reader = new FileReader();
                    reader.onload = function () {
                        var img = document.getElementById('previewImage');
                        img.src = reader.result;
                    };
                    reader.readAsDataURL(input.files[0]);
                });
            }
        });
    </script>
}
