@model IEnumerable<SanJuanTransporte.Models.Conductor>

@{
    ViewData["Title"] = "Índice";
}

<h1 class="mt-4">Índice de Conductores</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo Conductor</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Cédula de Identidad
                </th>
                <th>
                    Código del Constructor
                </th>
                <th>
                    Dirección
                </th>
                <th>
                    Correo Electrónico
                </th>
                <th>
                    Nombre Completo
                </th>
                <th>
                    Número de Licencia
                </th>
                <th>
                    Número de Placa
                </th>
                <th>
                    Foto
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoConstructor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroLicencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroPlaca)
                    </td>
                    <td>
                        <img src="@item.Foto" alt="Foto" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
