@model SanJuanTransporte.Models.Conductor

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del Conductor</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Información del Conductor</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CI)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CI)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Direccion)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NombreCompleto)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NumeroLicencia)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NumeroLicencia)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NumeroPlaca)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NumeroPlaca)
            </dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4>Foto del Conductor</h4>
        <hr />
        <div class="text-center">
            <img src="~/uploads/@Model.Foto" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.ConductorId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>
